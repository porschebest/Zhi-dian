doctype html
html
    head
        include bootstrap

        title= '知點'
    nav.nav-div
        div.head.pull-right
            a(href='/me')
                img.img-circle.me(src='../images/me.png')
        ul.cd-primary-nav
         if (username && authenticated)
            li
                a(href='/users/signout') 登出
            li
                a(href='/users/add_article') 新增文章
            li
                a(href='/users/profile') 文章列表
            li
                a(href='/users/signout') 程式
            li
                a(href='/users/signout') 設計
            li
                a(href='/users/signout') 創業
         else
            li
                a(href='/me')
                    img.img-circle(src='../images/me.png',height='100px;')
            li
                a(href='/')
                  h3  關於我
            li
                a(href='/users/signout')
                  h3 程式
            li
                a(href='/users/signout')
                  h3 設計
            li
                a(href='/users/signout')
                  h3 創業
        div.logo.center-block
            a(href='/')
              img(src='../images/LOGO.svg')
    body
    div.cd-overlay-nav
        span
    div.cd-overlay-content
        span
    a.cd-nav-trigger.pull-left  Menu
        span.cd-icon
    div(style='padding:50px;')
        form(name='modify',action='/apis/update/' + messageID ,method='post')
            h1 Modify article
            div
                p
                    span Writer:
                    label(style='padding-right:50px') #{username}
                div.form-group
                    label Title
                    input(class='form-control',type='text', name='Title' id='Title' value='#{blogs[0].Title}')
                div.form-group
                    label Date
                    input(class='form-control',type='date', name='Date' id='Date' value='#{blogs[0].Date}')
                div.form-group
                    label Article
                    textarea(class='form-control' cols="30", rows="20", name="Content") #{blogs[0].Article}
                div.form-group
                    label Tags
                    input(class='form-control',type='text', name='Tags' id='Tags' value='#{blogs[0].Tags}')
                div.form-group
                    span(style='padding-right:337px;')
                    input(class='btn btn-primary',type='submit',name='submit',value='Update')
