doctype html
html
    head
        include bootstrap

        title= '知點'
    nav.nav-div
        div.head.pull-right
            a(href='/me')
                img.img-circle.me(src='../images/me.png')
        ul.cd-primary-nav
         if (username && authenticated)
            li
                a(href='/users/signout') 登出
            li
                a(href='/users/add_article') 新增文章
            li
                a(href='/users/profile') 文章列表
            li
                a(href='/users/signout') 程式
            li
                a(href='/users/signout') 設計
            li
                a(href='/users/signout') 創業
         else
            li
                a(href='/me')
                    img.img-circle(src='../images/me.png',height='100px;')
            li
                a(href='/')
                  h3  關於我
            li
                a(href='/users/signout')
                  h3 程式
            li
                a(href='/users/signout')
                  h3 設計
            li
                a(href='/users/signout')
                  h3 創業
        div.logo.center-block
            a(href='/')
              img(src='../images/LOGO.svg')
    body
    div.cd-overlay-nav
        span
    div.cd-overlay-content
        span
    a.cd-nav-trigger.pull-left  Menu
        span.cd-icon
    // Round animated nav End

    div(style='padding:100px;')
        form(name='add',action='/apis/add',method='post').form-horizontal
            h1 Add article
            div.col-md-6
                div.form-group
                    span Writer:
                    label(style='padding-right:50px') #{username}
                div.form-group
                    label Title
                    input(class='form-control',type='text', name='Title' id='Title' )
                div.form-group
                    label Date
                    input(class='form-control',type='date', name='Date' id='Date' )
                div.form-group
                    label Article
                    textarea(class='form-control' cols="30", rows="20", name="Content")
                div.form-group
                    label Tags
                    input(class='form-control',type='text', name='Tags' id='Tags' )
                div.form-group
                    span
                    input(class='btn btn-default',type='submit',name='submit',value='Save')
